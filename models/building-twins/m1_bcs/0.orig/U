FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    back
    {
        type            empty;
    }

    eastBase
    {
        type            noSlip;
    }

    westBase
    {
        type            noSlip;
    }

    bottom
    {
        name                customBC_U;
        type			     codedMixed;
        refValue         $internalField;
        refGradient     uniform (0 0 0);
        valueFraction         uniform 1; // 0 for Neumann, 1 for Dirichlet
        // check codeDict for the code
    }

    front
    {
        type            empty;
    }

    eastSlope
    {
        type            noSlip;
    }

    eastLedge
    {
        type            noSlip;
    }

    westLedge
    {
        type            noSlip;
    }

    westSlope
    {
        type            noSlip;
    }

    topFace
    {
        type            noSlip;
    }
}


